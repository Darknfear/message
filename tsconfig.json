{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "strict": true,
    "incremental": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@configs/*": ["src/configurations/*"],
      "@core/*": ["src/core/*"],
      "@apps/*": ["src/apps/*"],
      "@constants/*": ["src/commons/constants/*"],
      "@decorators/*": ["src/commons/decorators/*"],
      "@filters/*": ["src/commons/filters/*"],
      "@guards/*": ["src/commons/guards/*"],
      "@pipes/*": ["src/commons/pipes/*"],
      "@middlewares/*": ["src/commons/middlewares/*"],
      "@utilities/*": ["src/commons/utilities/*"],
      "@entities/*": ["src/databases/entities/*"],
      "@libs/*": ["src/libs/*"],
      "@common/*": ["src/commons/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}